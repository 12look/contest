.container
  .row#category
    .input-field.col.m12
      = select_tag "categories", options_for_select(Category.all.collect {|a| [a.name, a.id]}), {prompt: "ВСЕ РАБОТЫ", onchange: "update_works_div(this.value)"}
  .row#works
    .loading-wrap
      #loading
    = render partial: "work", collection: @works
