.row
  .col.s12.m6.l4.offset-m3.offset-l4
    .card-panel
      %h4.center= "Средняя оценка от вас"
      .circular-bar
        %input.dial{"data-fgcolor": "#e74c3c", "data-height": "150", "data-linecap": "round", "data-width": "150", "data-step": "0.1", type: "text", value: "#{decimals(@rait) > 0 ? @rait.round(3) : @rait}"}
        .circular-bar-content
          %strong
      %h4.center= "Общая средняя"
      .circular-bar
        %input.dial{"data-fgcolor": "#34495e", "data-height": "150", "data-linecap": "round", "data-width": "150", "data-step": "0.1", type: "text", value: "#{decimals(@allrait) > 0 ? @allrait.round(3) : @allrait}"}
        .circular-bar-content
          %strong
      .center
        = link_to "перейти к работе", work_path(@work), class: "btn waves-effect waves-light"